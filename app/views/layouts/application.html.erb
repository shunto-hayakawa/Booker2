<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header navbar navbar-fixed-top navbar-inverse">
      <div class="container">
      <nav class="nav navbar-nav navbar-left">
        <h2 class="headline">Bookers</h2>
      </nav>

          <nav>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
              <li >
                <%= link_to "Home", mypage_path, class: "glyphicon glyphicon-home", 'aria-hidden' => true %>
              </li>
              <li>
                <%= link_to "Users", users_path, class: "glyphicon glyphicon-user", 'aria-hidden' => true %>
              </li>
              <li>
                <%= link_to "Books", books_path, class: "glyphicon glyphicon-book", 'aria-hidden' => true %>
              </li>
              <li>
                <%= link_to "logout", destroy_user_session_path, class: "glyphicon glyphicon-log-out", 'aria-hidden' => true,  method: :delete %>
              </li>
              <% else %>

                <li >
                  <%= link_to "Home", root_path, class: "glyphicon glyphicon-home", 'aria-hidden' => true %>
                </li>
                <li>
                  <%= link_to "About", home_about_path, class: "glyphicon glyphicon-link", 'aria-hidden' => true %>
                </li>
                <li>
                  <%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit", 'aria-hidden' => true %>
                </li>
                <li>
                  <%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-share", 'aria-hidden' => true %>
                </li>

                <% end %>
            </ul>
          </nav>
      </div>
    </div>
    
    <div class="body">
      <div class="container">
        <p id="notice">
         <%=  notice %> 
        </p>
        <%= yield %>
      </div>
    </div>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
